<%-  include('header')   -%>
  <div class="box" id="heading">
    <% if(kindOfDay === "Saturday" || kindOfDay === "Sunday"){ %>
      <h1><%= kindOfDay %></h1>
     <% }else{ %>
      <h1><%= kindOfDay %></h1>
    <%  } %>
  </div>
   <div class="box">
      <% for(var i=0;i!=itemlist.length;i++){ %>
        <form action="/remove" method="post">
          <div class="item">
            <input type="checkbox" name="checkbox" value=<%=itemlist[i].id  %> onchange="this.form.submit()">
            <p><%= itemlist[i].name %></p>
          </div>
          <input type="hidden" name="listname" value=<%=kindOfDay %> </input>
         </form>
       
      <% } %>
     <form class="item" action="/" method="post">
      <input type="text" name="list"  placeholder="New Item" autocomplete="off">
      <button type="submit" name="button" value=<%= kindOfDay %>>+</button>
    </form>  
   </div>

   <%- include('footer')   -%>

  
 

